import requests

# Replace 'YOUR_API_KEY' with your actual Google Maps API key
api_key = 'YOUR_API_KEY'

# Function to calculate energy consumption for a given distance
def calculate_energy_consumption(distance):
    # Add your energy consumption calculation logic here
    # This can be based on the electric vehicle model, efficiency, etc.
    # For demonstration purposes, let's assume a simple linear relationship
    efficiency = 0.2  # Wh per meter
    energy_consumption = distance * efficiency
    return energy_consumption

# List of predefined coordinates for the cars to travel between
coordinates = [
    (-36.8536098, 174.7664805),
    (-37.0089331, 174.7838064),
    (-36.9409461, 174.9039851),
    (-36.849963, 174.7560774)
]

# Simulate 10 electric vehicles traveling between the predefined coordinates
for car_id in range(1, 11):
    # Choose random start and end coordinates from the list
    start_coordinate = random.choice(coordinates)
    end_coordinate = random.choice(coordinates)

    # Use the Google Maps Directions API to get route information
    url = f'https://maps.googleapis.com/maps/api/directions/json?origin={start_coordinate[0]},{start_coordinate[1]}&destination={end_coordinate[0]},{end_coordinate[1]}&key={api_key}'
    response = requests.get(url)
    data = response.json()

    # Extract distance from the API response
    distance = data['routes'][0]['legs'][0]['distance']['value']  # in meters

    # Calculate energy consumption for the route
    energy_consumption = calculate_energy_consumption(distance)

    print(f"Car {car_id}:")
    print(f"Start Coordinate: {start_coordinate}")
    print(f"End Coordinate: {end_coordinate}")
    print(f"Distance: {distance} meters")
    print(f"Energy Consumption: {energy_consumption} Wh")
    print("----------------------------------")
